generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @default(uuid())
  name      String
  price     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}
